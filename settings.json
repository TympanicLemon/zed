{
    // Settings
    "theme": "Zedokai",
    "base_keymap": "VSCode",
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "tab_size": 4,
    "vim_mode": true,
    "vim": { "toggle_relative_line_numbers": true },
    "preferred_line_length": 120,
    "vertical_scroll_margin": 15,
    "pane_split_direction_vertical": "right",
    "pane_split_direction_horizontal": "down",
    "extend_comment_on_newline": false,
    "format_on_save": "off",
    "restore_on_startup": "none",

    // Languages
    "languages": {
        "HTML": {
            "tab_size": 2
        },
        "CSS": {
            "tab_size": 2
        },
        "JavaScript": {
            "tab_size": 2,
            "formatter": {
                "external": {
                    "command": "prettier"
                }
            }
        }
    },

    // Extensions & Features
    "auto_install_extensions": {
        "emmet": true,
        "git-firefly": true,
        "zedokai": true
    },
    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-20240620"
        },
        "button": false,
        "version": "2"
    },
    "features": {
        "inline_completion_provider": "none"
    },

    // Git
    "git": {
        "inline_blame": {
            "enabled": false
        }
    },

    // UI
    "terminal": {
        "button": false,
        "cursor_shape": "bar"
    },
    "scrollbar": {
        "show": "never"
    },
    "preview_tabs": {
        "enabled": false
    },
    "gutter": {
        "code_actions": false,
        "runnables": false
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "project_panel": {
        "button": false
    },
    "outline_panel": {
        "button": false
    },
    "collaboration_panel": {
        "button": false
    },
    "chat_panel": {
        "button": false
    }
}
